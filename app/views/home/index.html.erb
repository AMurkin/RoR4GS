<div class="well hello">
	<h4>The Universe is the totality of everything that exists, everything that has existed, and everything that will exist.</h4>
	<p class="hidden-xs">This Q&amp;A site ...</p>
</div>

<div class='container'>
	<div class="boxes">
		<% @questions.each do |q| %>
		<div class='media' data-target="<%= question_path(q) %>">
			<div class="media-left">
				<a href="#">
				<img class='media-object' src="<%= q.gravatar %>">
				</a>
			</div>
			<div class="media-body">
				<h4 class="media-heading"><%= q.email %> asked:</h4>
				<div class="time hidden-xs"><%= time_ago_in_words q.created_at %> ago</div>
				<div><%= truncate q.body, length: 300 %></div>
				<div class="hidden-xs">
					<a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View answers</a>
				</div>
			</div>
		</div>
		<% end %>
	</div>

	<% if @questions.empty? %>
		<div class="alert alert-info">Nothing here yet, be the first to ask?</div>
	<% end %>
</div>